<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar.size), micropost.user %>
  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <% if current_user?(micropost.user) %>
      <%= t("micropost.posted") + time_ago_in_words(micropost.created_at) + t("micropost.ago") %>
      <%= link_to t("micropost.del"), micropost, method: :delete, data: {confirm: t("micropost.warn")} %>
    <% end %>
  </span>
</li>
