<% provide(:title, t("signup_page.title")) %>
<h1><%= t "signup_page.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("signup_page.name_label") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("signup_page.email_label") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("signup_page.password_label") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("signup_page.confirm_label") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("signup_page.submit_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
